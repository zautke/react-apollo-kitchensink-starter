{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true
  },

  "rules": {
    "prefer-destructuring": ["error", {"object": true, "array": false}],
    "func-style": 0,
    "arrow-parens": 0,
    "no-param-reassign": 0,
    "jsx-filename-extension": 0,
    "linebreak-style": 0,
    "import/no-extraneous-dependencies": 0,
    "max-len": ["error", 100, 2, {
      "ignoreUrls": true,
      "ignoreComments": true,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }]
  },

  "globals": {
    "window": true,
    "document": true
  }
}